%div.advert-show
  %h1.text-center
    = @advertisement.title
    %br
    %small.text-center= number_to_currency(@advertisement.price, unit: "PLN")
  %h5.text-muted.text-center= "Category: #{@advertisement.category}"
  %p.description.mt-4= @advertisement.description

  %h1.display-4.text-center.mt-5 Gallery
  #carouselIndicators.carousel.slide.mt-5{"data-ride" => "carousel"}
    .carousel-inner
      .carousel-item.active
        = image_tag @advertisement.main_image.url(:medium), class: "d-block w-100"
      - @advertisement.pictures.each do |picture|
        .carousel-item
          = image_tag picture.image.url(:medium), class: "d-block w-100"
    %a.carousel-control-prev{"data-slide" => "prev", :href => "#carouselIndicators", :role => "button"}
      %span.carousel-control-prev-icon{"aria-hidden" => "true"}
      %span.sr-only Previous
    %a.carousel-control-next{"data-slide" => "next", :href => "#carouselIndicators", :role => "button"}
      %span.carousel-control-next-icon{"aria-hidden" => "true"}
      %span.sr-only Next


