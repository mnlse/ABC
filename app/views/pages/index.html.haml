%div.container
%h1.display-5.text-center.mt-4 Categories

%section.categories
  - @categories.in_groups_of(4) do |categories_four|
    .row.mt-4
      - categories_four.each do |category|
        - unless category.nil?
          .col-md-3
            = link_to "#", class: "category-item__link" do
              .category-item
                .category-item__icon
                  %i{class: category.icon}
                .category-item__text
                  = category.name
