.user-hero
  .row.p-5
    .col-md-3.px-0
      .user-avatar
    .col-md-6.px-0
      %h1.text-white.display-4= @user.username
      %h3.text-white= @user.email
.row
  .col-md-3
    = @user_profile.description

:css
  .user-hero {
    background-image: linear-gradient(0deg, rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('#{@user_profile.background_image.url}');
  }
  .user-avatar {
    background-image: url('#{@user_profile.avatar_image.url}');
  }
