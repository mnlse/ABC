%div.advert-show
  %h1.text-center= @advertisement.title
  %small.text-muted.text-center= @advertisement.category
  %p.description= @advertisement.description
  %p.price= @advertisement.price

  #carouselIndicators.carousel.slide{"data-ride" => "carousel"}
    .carousel-inner
      .carousel-item.active
        = image_tag @advertisement.main_image.url(:medium), class: "d-block w-100"
      - @advertisement.pictures.each do |picture|
        .carousel-item
          = image_tag picture.image.url(:medium), class: "d-block w-100"
    %a.carousel-control-prev{"data-slide" => "prev", :href => "#carouselIndicators", :role => "button"}
      %span.carousel-control-prev-icon{"aria-hidden" => "true"}
      %span.sr-only Previous
    %a.carousel-control-next{"data-slide" => "next", :href => "#carouselIndicators", :role => "button"}
      %span.carousel-control-next-icon{"aria-hidden" => "true"}
      %span.sr-only Next


